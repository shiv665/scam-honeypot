# Environment Configuration
# Copy this file to .env and fill in the values

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# API Key for authentication (required by GUVI)
API_KEY=your-secret-api-key

# MongoDB Configuration (for persistent conversation storage)
MONGODB_URI=mongodb+srv://your_mongodb_user:your_mongodb_password@your_mongodb_cluster.mongodb.net/
MONGODB_DB_NAME=scam_honeypot

# Groq API Configuration (Fast LLM - 14,400 req/day FREE!)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# Enable LLM-based responses (set to true for smarter responses)
USE_LLM=true

# Minimum engagement turns before sending GUVI callback
MIN_ENGAGEMENT_TURNS=3

# Logging Configuration
LOG_LEVEL=INFO
